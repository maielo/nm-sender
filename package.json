{
  "name": "nm-sender",
  "version": "1.0.3",
  "description": "nodemailer wrapper with retries and other goodies",
  "main": "dist/index.js",
  "scripts": {
    "start": "npx tsdx watch --onSuccess \"node ./dist/index.js\"",
    "build": "npx tsdx build --target node",
    "lint": "npx tsdx lint",
    "test": "npx tsdx test --watch",
    "prepare": "npx tsdx build --target node",
    "np:publish": "git push origin master && np --no-tests --no-2fa",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/jest": "^27.0.1",
    "@types/nodemailer": "^6.4.4",
    "babel-runtime": "^6.26.0",
    "nodemon": "^2.0.7",
    "size-limit": "^4.10.2",
    "tslib": "^2.3.0"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maielo/nm-sender.git"
  },
  "keywords": [
    "ts",
    "typescript",
    "nodemailer",
    "email",
    "nodejs",
    "js",
    "javascript"
  ],
  "author": "Maielo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maielo/nm-sender/issues"
  },
  "homepage": "https://github.com/maielo/nm-sender#readme",
  "dependencies": {
    "nodemailer": "^6.6.3"
  }
}
